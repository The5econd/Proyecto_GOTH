extends nav
block contentMain
    div(class="row")
        div(class="col s3 card" style="padding:2rem;margin-right: 1rem;")
            div(class="input-field col s10 offsite-s1")
                input(id="icon_cancion" type="text" class="validate")
                label(for="icon_cancion") Cancion
            div(class="input-field col s10 offsite-s1")
                input(id="icon_artista" type="text" class="validate")
                label(for="icon_artista") Artista
            div(class="input-field col s10 offsite-s1")
                input(id="icon_album" type="text" class="validate")
                label(for="icon_album") Album
            div(class="col s10 offsite-s3")
                a(class="waves-effect waves-light btn")
                    i(class="material-icons left") create
                    span Agregar 
        form(class="col s8 card" style="padding:2rem;" method="post" action="")
                div(class="col s4 offset")
                    img(class="materialboxed" width="400" src="/images/black_background.jpg")
                    div(class="file-field input-field")
                        div(class="btn")
                            span Cambiar
                            input(type="file")
                        div(class="file-path-wrapper")
                            input(class="file-path validate" type="text")
                div(class="input-field col s6 offset-s2")
                    input(id="icon_titulo" type="text" class="validate")
                    label(for="icon_titulo") Titulo
                div(class="col s12")
                    table
                        thead
                            tr
                                th Nombre
                                th Artista
                                th Album
                        tbody
                div(class = "col s4 offset-s10" style="margin-top: 1rem;")
                    button(class="btn waves-effect waves-light" type="submit" name="action")
                        span POST
                        i(class="material-icons right") send