extends nav
block contentMain
    div(class="row")
        div(class="col s3 card" style="padding:2rem;margin-right: 1rem;" name="postForm")
            div(class="input-field col s10 offsite-s1")
                input(name="nombre" type="text" class="validate")
                label(for="nombre") Cancion
            div(class="input-field col s10 offsite-s1")
                input(name="Artista" type="text" class="validate")
                label(for="Artista") Artista
            div(class="input-field col s10 offsite-s1")
                input(name="Album" type="text" class="validate")
                label(for="Album") Album
            div(class="col s10 offsite-s3")
                a(class="btn waves-effect waves-light" type="button" onClick="guardar()")
                    i(class="material-icons right") create
                    span Agregar
        form(class="col s8 card" style="padding:2rem;" method="post")
                div(class="col s4 offset")
                    img(name="imagenPlaylist" class="materialboxed" width="400" src="/images/black_background.jpg")
                    div(class="file-field input-field")
                        div(class="btn")
                            span Cambiar
                            input(id="myFile" type="file")
                        div(class="file-path-wrapper")
                            input(class="file-path validate" type="text")
                div(class="input-field col s6 offset-s2")
                    input(id="icon_titulo" type="text" class="validate")
                    label(for="icon_titulo") Titulo
                div(class="col s12")
                    table
                        thead
                            th Nombre
                            th Artista
                            th Album
                        tbody(class="posts")
                div(class = "col s4 offset-s10" style="margin-top: 1rem;")
                    button(class="btn waves-effect waves-light" type="submit" name="action")
                        span POST
                        i(class="material-icons right") send
    script(src="/js/main.js")